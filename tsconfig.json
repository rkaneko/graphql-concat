{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "pretty": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "target": "ES2015",
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules",
    "dist"
  ]
}
