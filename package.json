{
  "name": "graphql-concat",
  "version": "0.8.0-beta.4",
  "description": "A CLI tool to concatenate GraphQL files into executable GraphQL files.",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 8"
  },
  "bin": {
    "gqlcat": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch:build": "npm run build -- --watch",
    "tslint": "tslint --config tslint.json --project tsconfig.json --fix 'src/**/*.ts'",
    "prettier": "prettier --write 'src/**/*.ts'",
    "check:prettier": "bash script/check-prettier.sh",
    "test": "npm-run-all clean build ava",
    "ava": "ava",
    "watch:ava": "ava --watch",
    "clean": "rimraf dist",
    "watch:test": "npm-run-all clean build --print-label --parallel watch:build watch:ava",
    "check:ciconfig": "curl -s https://circle-downloads.s3.amazonaws.com/releases/build_agent_wrapper/circleci | bash -s -- config validate -c .circleci/config.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rkaneko/graphql-concat.git"
  },
  "ava": {
    "files": [
      "dist/**/*.spec.js"
    ],
    "sources": [
      "src/**/*.{ts,tsx}"
    ],
    "concurrency": 2,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": true
  },
  "prettier": {
    "parser": "typescript",
    "tabWidth": 4
  },
  "keywords": [
    "cli",
    "graphql",
    "schema"
  ],
  "author": "Ryota Kaneko <kanek.o.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rkaneko/graphql-concat/issues"
  },
  "homepage": "https://github.com/rkaneko/graphql-concat",
  "devDependencies": {
    "@types/graphql": "0.13.0",
    "@types/mkdirp": "0.5.2",
    "@types/node": "9.6.7",
    "@types/rimraf": "2.0.2",
    "ava": "0.25.0",
    "graphql": "0.13.2",
    "npm-run-all": "4.1.2",
    "prettier": "1.12.1",
    "rimraf": "2.6.2",
    "tslint": "5.9.1",
    "tslint-config-prettier": "1.12.0",
    "typescript": "2.7.2"
  },
  "dependencies": {
    "commander": "2.15.1",
    "graphql-config": "2.0.1",
    "mkdirp": "0.5.1"
  },
  "peerDependencies": {
    "graphql": "^0.13.0 || ^14.0.0"
  }
}
